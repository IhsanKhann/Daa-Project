# =========================
# PowerShell one-liner build
# =========================

# Delete old build folder if it exists
if (Test-Path build) { Remove-Item -Recurse -Force build }

# Recreate build folder
New-Item -ItemType Directory -Path build

# Compile all executables
g++ algorithms/linear.cpp -O2 -o build/linear.exe
g++ algorithms/binary.cpp -O2 -o build/binary.exe
g++ launcher/main.cpp -O2 -o build/launcher.exe

Write-Host "âœ… Build complete! Executables are in the build/ folder."
